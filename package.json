{
  "name": "eslint-config",
  "version": "1.2.0",
  "private": true,
  "description": "Configure eslint for sibi",
  "scripts": {
    "lint": "eslint '*.js' 'packages/**/*.js'",
    "test": "npm run lint"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sibipro/eslint-config.git"
  },
  "keywords": [],
  "author": "Sibi (https://github.com/sibipro)",
  "homepage": "https://github.com/sibipro/eslint-config",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "oao": "^1.7.0",
    "prettier": "^2.0.5"
  }
}
